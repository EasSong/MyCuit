<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cn.cuit.model.Answer" table="answer_tab">
        <composite-id>
            <key-property name="qtq_Id" column="qtq_id"/>
            <key-property name="ts_Id" column="ts_id"/>
        </composite-id>
        <property name="ans_Context">
            <column name="ans_context"/>
        </property>
    </class>
</hibernate-mapping>